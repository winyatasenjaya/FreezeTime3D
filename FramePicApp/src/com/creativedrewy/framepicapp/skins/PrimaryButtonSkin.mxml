<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:mx="library://ns.adobe.com/flex/mx" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		minWidth="50" minHeight="50" 
		creationComplete="initSkin()">
	
	<fx:Script>
		private function initSkin():void {
			outline.color = getStyle('color');
		}
	</fx:Script>
	
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata> 
	
	<!-- Specify one state for each SkinState metadata in the host component's class -->
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>
	
	<s:Rect left="0" right="0" top="0" bottom="0" width="100%" height="100%" radiusX="0" radiusY="0">
		<s:stroke>
			<s:SolidColorStroke id="outline" weight="1" />
		</s:stroke>
		<s:fill>
			<s:SolidColor color="#FFFFFF" />
		</s:fill>
	</s:Rect>
	
	<s:Label id="labelDisplay" horizontalCenter="0" verticalCenter="1" />
</s:Skin>
